@model IEnumerable<User>;

<h2>User List</h2>

<table class ="table">

    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>

    </tr>
    
    @foreach (User user in Model)
    {
        <tr>

            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>
                <a asp-controller="UserRegistration" asp-action="Details" asp-route-id="@user.Id">Details</a>
            </td>
        </tr>

    }







</table>

<p>
    @Html.ActionLink("Register a user", "Registration","UserRegistration")
</p>