@model Product;

<h2>@Model.Name</h2>

<div>
    <h6>Price: $@Model.Price</h6>
    <h6>Product Type: @Model.Category</h6>
    <h6>Details: @Model.Description</h6>
</div>
<div>
    <p></p>
    <form asp-action="Delete" asp-controller="Products" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

<div>
    <p></p>
    <p></p>
    <p>
        @Html.ActionLink("Back to product list", "Index", "Products")
    </p>
</div>