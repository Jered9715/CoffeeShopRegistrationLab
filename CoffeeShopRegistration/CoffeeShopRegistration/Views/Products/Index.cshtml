@model IEnumerable<Product>;

<h2>Product List</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
    </tr>
    
    @foreach(Product product in Model)
    {
    <tr>
        <td>@product.Name</td>
        <td>@product.Category</td>
        <td>$@product.Price</td>


    </tr>
    }



</table>
